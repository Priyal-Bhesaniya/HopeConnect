@{
    Layout = "~/Views/Shared/_OrganizationLayout.cshtml";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true">


    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- User Profile Section -->
    <div class="auth-container">
        <div class="auth-box1">
            <h3>User Profile</h3>

            <form method="post">
                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/user.png" alt="User Icon" class="icon">
                    <input type="text" name="Name" placeholder="Name" required>
                </div>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/email.png" alt="Email Icon" class="icon">
                    <input type="email" name="Email" placeholder="Email" required>
                </div>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/phone.png" alt="Phone Icon" class="icon">
                    <input type="text" name="MobileNo" placeholder="Mobile No" required>
                </div>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/lock.png" alt="Lock Icon" class="icon">
                    <input type="password" name="Password" placeholder="Password" required>
                </div>

                <button type="submit" class="btn">Edit Profile</button>
            </form>
        </div>
    </div>

    <!-- User Posts Section -->
    <section class="post-section">
        <h2 style="margin-left : 500px">Your Posts</h2>
        <div class="carousel">
            <button class="prev" aria-label="Previous Slide">
                <i class="fas fa-chevron-left"></i>
            </button>
            <div class="carousel-content">
                <div class="slide">
                    <img src="~/Images/guest/child.png" alt="Child Rescue">
                    <p>We rescue child beggars by reporting, tracking, and connecting them with welfare organizations for rehabilitation.</p>
                </div>
                <div class="slide">
                    <img src="~/Images/guest/bird.png" alt="Bird Rescue">
                    <p>Providing food and shelter to homeless children through our support programs.</p>
                </div>
                <div class="slide">
                    <img src="~/Images/guest/child2.png" alt="Child Education">
                    <p>Collaborating with NGOs to ensure child education and a better future.</p>
                </div>
            </div>
            <button class="next" aria-label="Next Slide">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
        <div class="indicators">
            <span class="dot active" data-index="0"></span>
            <span class="dot" data-index="1"></span>
            <span class="dot" data-index="2"></span>
        </div>
    </section>

    <script src="~/js/ScriptProfile.js" asp-append-version="true"></script>

</body>
</html>

