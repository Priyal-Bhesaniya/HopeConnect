@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HopeConnect</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<body>
    <!-- User Panel Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="User" asp-action="UserDashboard">
                    <img src="~/images/guest/logo-removebg-preview.png" class="img-fluid" alt="Logo" width="150" />
                </a>
                <!-- Fixed Navbar Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links Wrapped Inside Collapse -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "AllPost" ? "active" : "")" asp-controller="User" asp-action="User">All Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Network" ? "active-link" : "")" asp-controller="Network" asp-action="Index">Network</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "CreatePost" ? "active" : "")" asp-controller="CreatePost" asp-action="Index">Post</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"] == "Notifications" ? "active" : "")" asp-controller="Notifications" asp-action="Index">Notifications</a>
                        </li>
                        <li class="nav-item">
                            @if (ViewData["ActivePage"] == "Profile")
                            {
                                <a class="nav-link text-danger fw-bold" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            }
                            else
                            {
                                <a class="nav-link @(ViewData["ActivePage"] == "Profile" ? "active" : "")" asp-controller="Profile" asp-action="Profile">
                                    <i class="fas fa-user"></i> 
                                </a>
                            }
                        </li>


                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Include Bootstrap JavaScript (Fixed) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Main Content -->
    <div class="container">
        @RenderBody()  <!-- This will dynamically load each user-related page -->
    </div>

    <!-- Footer -->

    <footer class="w-full flex justify-center items-center p-6 bg-cover bg-center rounded-2xl shadow-lg"
            style="background-image: url('/images/footer/footerImage.png'); background-repeat: no-repeat; background-size: cover;">
        <div style="

             background-color: #F5C28E ;
             opacity: 0.9;
             border-radius: 0.5rem ;
             box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">


            <!-- Left Section - Logo & Text -->
            <div class="flex space-x-4">
                <img src="/images/guest/logo-removebg-preview.png" alt="Logo" class="h-12">
                <div style="margin-left:300px; margin-bottom:0px">
                    <h2 class="text-2xl font-bold text-black">Hope Connect</h2>
                    <p class="text-black text-sm mt-1 leading-relaxed">
                        Helps report and track homeless children and beggars, <br />
                        aiding their rescue through photos, location detection, <br />
                        and welfare collaboration.
                    </p>
                </div>
            </div>

            <!-- Right Section - Social Icons -->
            <div class="w-full flex justify-center mt-6 md:absolute md:bottom-6 md:right-8 space-x-4" style="margin-left: 1300px;">
                <a href="https://instagram.com" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/instagram.png" alt="Instagram">
                </a>
                <a href="https://wa.me/your-number" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/whatsapp.png" alt="WhatsApp">
                </a>
                <a href="https://youtube.com" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/youtube.png" alt="YouTube">
                </a>
                <a href="https://facebook.com" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/facebook-new.png" alt="Facebook">
                </a>
            </div>

        </div>
    </footer>
</body>
</html>
