@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HopeConnect</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HopeConnect.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light  border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/guest/logo-removebg-preview.png" class="img-fluid" alt="Logo" width="150" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="OallPost" asp-action="OallPost"><strong>All Post</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Onotification" asp-action="Onotification"><strong>Notifications</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Oprofile" asp-action="Oprofile"><strong>viral</strong></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />

    <footer class="w-full flex justify-center items-center p-6 bg-cover bg-center rounded-2xl shadow-lg"
            style="background-image: url('/images/footer/footerImage.png'); background-repeat: no-repeat; background-size: cover;">
        <div style="

             background-color: #F5C28E ;
             opacity: 0.9;
             border-radius: 0.5rem ;
             box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">


            <!-- Left Section - Logo & Text -->
            <div class="flex space-x-4">
                <img src="/images/guest/logo-removebg-preview.png" alt="Logo" class="h-12">
                <div style="margin-left:300px; margin-bottom:0px">
                    <h2 class="text-2xl font-bold text-black">Hope Connect</h2>
                    <p class="text-black text-sm mt-1 leading-relaxed">
                        Helps report and track homeless children and beggars, <br />
                        aiding their rescue through photos, location detection, <br />
                        and welfare collaboration.
                    </p>
                </div>
            </div>

            <!-- Right Section - Social Icons -->
            <div class="w-full flex justify-center mt-6 md:absolute md:bottom-6 md:right-8 space-x-4" style="margin-left: 1300px;">
                <a href="https://instagram.com" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/instagram.png" alt="Instagram">
                </a>
                <a href="https://wa.me/your-number" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/whatsapp.png" alt="WhatsApp">
                </a>
                <a href="https://youtube.com" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/youtube.png" alt="YouTube">
                </a>
                <a href="https://facebook.com" target="_blank" rel="noopener noreferrer">
                    <img src="https://img.icons8.com/ios-filled/30/000000/facebook-new.png" alt="Facebook">
                </a>
            </div>

        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
