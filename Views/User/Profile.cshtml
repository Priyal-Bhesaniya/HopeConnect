@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Post to Organization";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Signup</title>
    <link rel="stylesheet" href="~/css/Profile.css">
    <link rel="stylesheet" href="~/css/Courosole.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

  
</head>
<body>

  
        <div class="auth-container">
            <div class="auth-box1">
              <h3>User Profile</h3>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/user.png" alt="User Icon" class="icon">
                    <input type="text" name="Name" placeholder="Name" required>
                </div>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/email.png" alt="Email Icon" class="icon">
                    <input type="email" name="Email" placeholder="Email" required>
                </div>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/phone.png" alt="Phone Icon" class="icon">
                    <input type="text" name="MobileNo" placeholder="Mobile No" required>
                </div>

                <div class="input-group">
                    <img src="https://img.icons8.com/ios-filled/50/000000/lock.png" alt="Lock Icon" class="icon">
                    <input type="password" name="Password" placeholder="Password" required>
                </div>

                <button type="submit" class="btn">Edit Profile</button>

            </div>
        </div>

    <div class="container">
        <h2>Your Posts</h2>
        <div class="carousel">
            <button class="prev"><i class="fas fa-chevron-left"></i></button>
            <div class="carousel-content">
                <div class="slide active">
                    <img src="~/Images/guest/child.png" alt="Image 1">
                    <p>We rescue child beggars by reporting, tracking, and connecting them with welfare organizations for rehabilitation.</p>
                </div>
                <div class="slide">
                    <img src="~/Images/guest/bird.png" alt="Image 2">
                    <p>Providing food and shelter to homeless children through our support programs.</p>
                </div>
                <div class="slide">
                    <img src="~/Images/guest/child2.png" alt="Image 3">
                    <p>Collaborating with NGOs to ensure child education and a better future.</p>
                </div>
            </div>
            <button class="next"><i class="fas fa-chevron-right"></i></button>
        </div>
        <div class="indicators">
            <span class="dot active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
    </div>

    <script src="~/js/script.js"></script>
  
</body>
</html>
