@model CurdNew.Models.HomeModel

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Post to Organization";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>

    </style>
</head>
<body>
    <!-- User Profile Section -->
    <div class="auth-container">
        <div class="auth-box1">
            <h2 class="form-title">User Profile</h2>
            <form method="post" asp-action="Profile" class="profile-form">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" value="@Model.Email" readonly class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" value="@Model.Name" required class="form-control" />
                </div>

                <div class="form-group">
                    <label for="MobileNo">Mobile Number</label>
                    <input type="text" id="MobileNo" name="MobileNo" value="@Model.MobileNo" required class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" name="Password" value="@Model.Password" required class="form-control" />
                </div>

                <div class="form-group btn-container">
                    <button type="submit" class="btn-update">Update Profile</button>
                </div>
            </form>
        </div>
    </div>


    <!-- User Posts Section -->
    <section class="post-section">
        <h2 style="margin-left : 300px">Your Posts</h2>
        <div class="carousel">
            <button class="prev" aria-label="Previous Slide">
                <i class="fas fa-chevron-left"></i>
            </button>
            <div class="carousel-content">
                <div class="slide">
                    <img src="~/Images/guest/child.png" alt="Child Rescue">
                    <p>We rescue child beggars by reporting, tracking, and connecting them with welfare organizations for rehabilitation.</p>
                </div>
                <div class="slide">
                    <img src="~/Images/guest/bird.png" alt="Bird Rescue">
                    <p>Providing food and shelter to homeless children through our support programs.</p>
                </div>
                <div class="slide">
                    <img src="~/Images/guest/child2.png" alt="Child Education">
                    <p>Collaborating with NGOs to ensure child education and a better future.</p>
                </div>
            </div>
            <button class="next" aria-label="Next Slide">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
        <div class="indicators">
            <span class="dot active" data-index="0"></span>
            <span class="dot" data-index="1"></span>
            <span class="dot" data-index="2"></span>
        </div>
    </section>

    <script src="~/js/ScriptProfile.js" asp-append-version="true"></script>
</body>
</html>
